nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      button(type='button' data-toggle='collapse' data-target='#navbar-collapse' area-expanded='false').navbar-toggle.collapsed
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') ISM Device
    .collapse.navbar-collapse#navbar-collapse
      ul.nav.navbar-nav
        each item in ["Home", "About"]
          if (item == pagetitle)
            li.active
              a(href='/' + item.toLowerCase()) #{item}
                span.sr-only (current)
          else
            li
              a(href='/' + item.toLowerCase()) #{item}
