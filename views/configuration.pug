extends ./layout.pug
block content
  h1.text-xs-center Configuration
  p.lead Please specify your IoT Portal address to start configuration
  form(method='post')
    if (error)
      .form-group.has-danger
        label.form-control-label(for='urlinput') IoT Portal URL
        input#urlinput(type='url' name='portalurl' placeholder='Remember to use https' value=url).form-control
        span.form-control-feedback Please specify a correct URL
      button(type='submit').btn.btn-primary Submit
    else
      .form-group
        label(for='urlinput') IoT Portal URL
        input#urlinput(type='url' name='portalurl' placeholder='Remember to use https' value=url).form-control
      button(type='submit').btn.btn-primary Submit
